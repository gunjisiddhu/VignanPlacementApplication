<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/department_coordinator_cardView"
    android:backgroundTint="#FFFFFF"
    app:cardBackgroundColor="@color/light_purple"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="5dp"
    android:padding="20dp"
    android:layout_height="wrap_content">

        <LinearLayout
            android:padding="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_weight="0.2"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#2C2B2B"
                    />
                <TextView

                    android:id="@+id/recycler_username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SiddiSaai Gunji"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:layout_weight="0.5"
                    android:textSize="15dp"
                    android:textColor="@color/b3"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/b2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branch"
                    android:layout_weight="0.4"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#2C2B2B"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="CSE"
                    android:id="@+id/recycler_branch"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:layout_weight="0.5"
                    android:textSize="17dp"
                    android:textColor="@color/b3"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:layout_weight="0.2"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#2C2B2B"
                    />
                <TextView
                    android:id="@+id/recycler_mobile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7780681762"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:layout_weight="0.5"
                    android:textSize="17dp"
                    android:textColor="@color/b3"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gmail"
                    android:layout_weight="0.2"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#2C2B2B"
                    />
                <TextView
                    android:id="@+id/recycler_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="abc@gmail.com"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:layout_weight="0.5"
                    android:textSize="17dp"
                    android:textColor="@color/b3"/>
            </LinearLayout>


        </LinearLayout>

</androidx.cardview.widget.CardView>