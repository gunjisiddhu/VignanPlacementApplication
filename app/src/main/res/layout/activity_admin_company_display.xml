                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/next_arrow"
                android:layout_weight="0.01"
                />

        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="TR Selected Students"
                android:textSize="30dp"
                android:textStyle="bold"
                android:fontFamily="@font/fredoka"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:id="@+id/tr_count"
                android:textAlignment="center"
                android:text="0"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/tr_list_arrow"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/next_arrow"
                android:layout_weight="0.01"
                />

        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="HR Selected Students"
                android:textSize="30dp"
                android:textStyle="bold"
                android:fontFamily="@font/fredoka"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:id="@+id/hr_count"
                android:textAlignment="center"
                android:text="0"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/hr_list_arrow"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/next_arrow"
                android:layout_weight="0.01"
                />

        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/upload_final_list_layout"
            android:layout_marginTop="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/admin_company_manage_button"
                android:text="done" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click above button only when company completed its hiring process."/>

        </LinearLayout>

    </LinearLayout>





</androidx.core.widget.NestedScrollView>

